{
    "phases": {
        "setup": {
            "cmds": [
                "curl -fsSL https://bun.sh/install | bash",
                "export PATH=\"$HOME/.bun/bin:$PATH\""
            ]
        },
        "install": {
            "cmds": [
                "bun install"
            ]
        },
        "build": {
            "cmds": [
                "bun run build"
            ]
        }
    },
    "start": "bun run start"
}