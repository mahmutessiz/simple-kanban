{
    "phases": {
        "setup": {
            "nixPkgs": [
                "bun",
                "nodejs_20",
                "python3",
                "gcc",
                "gnumake"
            ]
        },
        "install": {
            "cmds": [
                "bun install"
            ]
        },
        "build": {
            "cmds": [
                "bun run build"
            ]
        }
    },
    "start": {
        "cmd": "mkdir -p $(dirname $(echo $DB_FILE_NAME | sed 's/^file://')) && bun run db:push && bun run start"
    }
}