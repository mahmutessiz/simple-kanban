{
    "phases": {
        "setup": {
            "nixPkgs": [
                "bun",
                "nodejs_20",
                "python3",
                "gcc",
                "gnumake"
            ]
        },
        "install": {
            "cmds": [
                "bun install --frozen-lockfile=false"
            ]
        },
        "build": {
            "cmds": [
                "bun run build"
            ]
        }
    },
    "start": {
        "cmd": "bun run start"
    }
}